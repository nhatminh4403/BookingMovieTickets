@model BookingMovieTickets.VIewModel.FilmVM
@using BookingMovieTickets
@using BookingMovieTickets.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Index";Layout = "_Layout";
}
<div class="justify-content-center text-center"> <h1>Quản lý</h1></div>

<div class="container-fluid">
    <ul class="nav nav-tabs justify-content-center" id="mainTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link" id="tab1-tab" data-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="true">Phim</a>
        </li>
        <!--Thêm tab nếu cần thiết-->
        <li class="nav-item">
            <a class="nav-link" id="tab2-tab" data-toggle="tab" href="#tab2" role="tab" aria-controls="tab2" aria-selected="false"> Thể loại </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="tab3-tab" data-toggle="tab" href="#tab3" role="tab" aria-controls="tab3" aria-selected="false">Rạp chiếu</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="tab4-tab" data-toggle="tab" href="#tab4" role="tab" aria-controls="tab4" aria-selected="false">Giờ công chiếu</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
            <partial name="~/Areas/Admin/Views/Movie/_FilmPartialView.cshtml" model="@Model.Films"/>
        </div>
        <div class="tab-pane" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
            <partial name="~/Areas/Admin/Views/FilmCategory/_CategoriesPartialView.cshtml" model="@Model.FilmCategories" />
        </div>
        <div class="tab-pane" id="tab3" role="tabpanel" aria-labelledby="tab3-tab">
            <div class="row">
                <div class="col-md-3">
                    <ul class="nav flex-column nav-tabs" id="subTab" role="tablist">
                        @foreach (var theatreRoom in Model.Theatres)
                        {
                            <li class="nav-item d-flex align-items-center mb-2">
                                @if (theatreRoom.TheatreId == Model.Theatres.First().TheatreId)
                                {
                                    <a class="nav-link show active flex-grow-1 align-items-center justify-content-between" id="subTab-@theatreRoom.TheatreId" data-toggle="tab" href="#subTabContent-@theatreRoom.TheatreId" role="tab"
                                       aria-controls="subTabContent-@theatreRoom.TheatreId" aria-selected="true">
                                        
                                       @theatreRoom.Name
                                        <form asp-action="Edit" asp-controller="TheatreRoom" asp-route-id="@theatreRoom.TheatreId" method="get" class="d-inline">
                                            <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                                        </form>
                                        <form asp-action="Edit" asp-controller="TheatreRoom" asp-route-id="@theatreRoom.TheatreId" method="get" class="d-inline">
                                            <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                                        </form>
                                        <form asp-action="Edit" asp-controller="TheatreRoom" asp-route-id="@theatreRoom.TheatreId" method="get" class="d-inline">
                                            <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                                        </form>
                                   </a>
                                    
                                }
                                else
                                {
                                    <a class="nav-link flex-grow-1" id="subTab-@theatreRoom.TheatreId" data-toggle="tab" href="#subTabContent-@theatreRoom.TheatreId" role="tab"
                                       aria-controls="subTabContent-@theatreRoom.TheatreId" aria-selected="true">@theatreRoom.Name</a>
                                }
                                   

                            </li>
                            
                        }
                    </ul>
                </div>
       @*          <div class="btn-group ml-2" role="group">

                    <a asp-action="Edit" asp-controller="Theatre" asp-route-id="@theatreRoom.TheatreId" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i></a>
                    <a asp-action="Details" asp-controller="Theatre" asp-route-id="@theatreRoom.TheatreId" class="btn btn-info btn-sm"><i class="fa fa-info-circle"></i></a>
                    <a asp-action="Delete" asp-controller="Theatre" asp-route-id="@theatreRoom.TheatreId" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
                </div> *@

                <div class="col-md-9">
                    <!-- Sub tab content -->
                    <div class="tab-content" id="subTabContent">
                        @foreach (var theatreRoom in Model.Theatres)
                        {
                            @if (theatreRoom.TheatreId == Model.Theatres.First().TheatreId)
                            {
                                 <div class="tab-pane show active" id="subTabContent-@theatreRoom.TheatreId" role="tabpanel" aria-labelledby="subTab-@theatreRoom.TheatreId">
                                <!-- Content for each location -->
                                    <partial name="~/Areas/Admin/Views/TheatreRoom/_RoomPartialView.cshtml" model="@theatreRoom.TheatreRooms" />
                                </div>
                            }
                            else
                            {
                                <div class="tab-pane" id="subTabContent-@theatreRoom.TheatreId" role="tabpanel" aria-labelledby="subTab-@theatreRoom.TheatreId">
                                    <!-- Content for each location -->
                                    <partial name="~/Areas/Admin/Views/TheatreRoom/_RoomPartialView.cshtml" model="@theatreRoom.TheatreRooms" />
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <!--Thêm tab content  dưới này-->
    </div>
</div>
<style>
    .nav-item {
        position: relative;
    }

        .nav-item .nav-link {
            flex-grow: 1;
            margin-right: 1rem;
        }

        .nav-item .btn {
            margin-left: 5px;
        }

        .nav-item .btn,
        .nav-item .nav-link {
            display: flex;
            align-items: center;
        }

        .nav-item .btn,
        .nav-item .nav-link {
            line-height: normal; /* Ensure buttons and tabs are aligned vertically */
        }

        .nav-item .btn {
            height: auto; /* Ensure buttons do not stretch */
            padding: 0.375rem 0.75rem; /* Same padding as Bootstrap buttons */
        }

        .nav-item .nav-link {
            padding: 0.375rem 1rem; /* Adjust the padding of the tab */
        }

    .nav-tabs .nav-item.show .nav-link, .nav-tabs .nav-link.active {
        color: #495057;
        background-color: #e9ecef;
        border-color: #dee2e6 #dee2e6 #fff;
    }

    .nav-tabs .nav-link {
        border: 1px solid transparent;
        border-top-left-radius: 0.25rem;
        border-top-right-radius: 0.25rem;
    }

        .nav-tabs .nav-link:hover {
            border-color: #e9ecef #e9ecef #dee2e6;
        }
</style>

<script>
    $(document).ready(function () {
        $('#maimTab a').on('click', function (e) {
            e.preventDefault();
            $(this).tab('show');
        });
        $('#subTab a').on('click', function (e) {
            e.preventDefault();
            $(this).tab('show');
        });
    });
</script>
