@model BookingMovieTickets.Models.TheatreRoom

@{
    ViewData["Title"] = "Delete";
}



<h3>Bạn có muốn xóa phòng này?</h3>
<div>
    <br />
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên phòng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Theatre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Theatre.Location)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TheatreRoomId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Trở về</a>
    </form>
</div>
