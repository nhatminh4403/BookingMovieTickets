@model IEnumerable<MoviesBooking.Models.FilmCategory>
@{
    ViewData["Title"] = "Default";
}


<ul class="dropdown-menu">
    @foreach (var item in Model)
    {
        <li class="menu__nav-item">
            <a asp-action="SortFilmsByCategories" asp-route-id="@item.FilmCategoryId" asp-controller="Home" asp-area="">@item.Name</a>
        </li>
    }
</ul>
