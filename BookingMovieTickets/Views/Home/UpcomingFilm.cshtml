@model IEnumerable<MoviesBooking.Models.Film>

@{
    ViewData["Title"] = "UpcomingFilm";
}
<style>

    .container__film {
        width: 1248px;
        margin: 0 auto;
    }


    .list {
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        margin: 0 auto;
    }

    .item__film {
        width: 285px;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .item__img {
        width: 100%;
        height: 425px;
        object-fit: cover;
        background-position: cover;
        border-radius: 5px;
    }

        .item__img:hover {
            filter: blur(1px) brightness(50%);
        }

    .item__name {
        text-align: center;
        text-transform: capitalize;
        position: relative;
        margin-bottom: 0;
        text-align: left;
        line-height: 160%;
        color: #333;
        font-weight: 700;
        font-size: 16px;
        margin-top: 10px;
        cursor: pointer;
    }

    .heading {
        border-left: 5px solid #ffc936;
        padding: 3px 20px;
        font-size: 20px;
        font-weight: bold;
        margin-top: 120px;
    }
</style>

<h2>Các phim sắp chiếu</h2>

<div class="container__film">

    <div class="lis-film">

        <h2 class="heading">PHIM</h2>

        <div class="list">

            @foreach (var item in Model)
            {
                if(item.StartTime > DateTime.UtcNow)
                {
                       <a asp-controller="Home" asp-action="FilmDetailView" asp-route-id="@item.FilmId">
                    <div class="item__film">
                        <img src="@item.PosterUrl" class="item__img" />
                        <span class="item__name">@item.NameFilm</span>
                    </div>
                </a>
                }
             
            }

        </div>
    </div>

</div>
