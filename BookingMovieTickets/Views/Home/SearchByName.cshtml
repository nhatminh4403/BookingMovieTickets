@model IEnumerable<BookingMovieTickets.Models.Film>
@{
    ViewData["Title"] = "Tìm kiếm";
}
@section Styles{
    <style>
        body {
            background-color: rgb(252,235,211);
        }

        .container__film {
            width: 1248px;
            margin: 0 auto;
        }


        .list {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
            margin: 0 auto;
        }

        .item__film {
            width: 285px;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .item__img {
            width: 100%;
            height: 425px;
            object-fit: cover;
            background-position: cover;
            border-radius: 5px;
        }

            .item__img:hover {
                filter: blur(1px) brightness(50%);
            }

        .item__name {
            text-align: center;
            text-transform: capitalize;
            position: relative;
            margin-bottom: 0;
            text-align: left;
            line-height: 160%;
            color: #333;
            font-weight: 700;
            font-size: 16px;
            margin-top: 10px;
            cursor: pointer;
        }

        .heading {
            border-left: 5px solid #ffc936;
            padding: 3px 20px;
            font-size: 20px;
            font-weight: bold;
            margin-top: 120px;
        }
    </style>
}



<div class="container__film">
    <div class="lis-film">
        @if (!Model.Any())
        {
            <h2>Không có phim trùng với kết quả tìm kiếm của bạn</h2>
        }
        else
        {
            <h2 class="heading">Các phim có cùng tìm kiếm của bạn</h2>

            <div class="list">
                <partial name="Films" model="Model" />
            </div>
        }
        
    </div>

</div>