@model BookingMovieTickets.VIewModel.FilmVM
@using BookingMovieTickets.VIewModel

@{
    var layoutModel = ViewData["LayoutModel"] as FilmVM;
}


<style>

    .container__film {
        width: 1248px;
        margin: 0 auto;
    }


    .list{
        width:100% ;
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        margin: 0 auto;
    }

    .item__film{
        width: 285px;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .item__img{
        width:100%;
        height: 425px;
        object-fit: cover;
        background-position: cover;
        border-radius: 5px;
    }

    .item__img:hover{
            filter: blur(1px) brightness(50%);
    }

    .item__name{
        text-align: center;
        text-transform: capitalize;
        position: relative;
        margin-bottom: 0;
        text-align: left;
        line-height: 160%;
        color: #333;
        font-weight: 700;
        font-size: 16px;
        margin-top: 10px;
        cursor: pointer;
    }

    .heading{
        border-left: 5px solid #ffc936;
        padding: 3px 20px;
        font-size: 20px; 
        font-weight: bold;
        margin-top: 120px;
    }

    .input-group:not(.has-validation) > .dropdown-toggle:nth-last-child(n+3), .input-group:not(.has-validation) > :not(:last-child):not(.dropdown-toggle):not(.dropdown-menu) {
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
    }

    .input-group-lg > .btn, .input-group-lg > .form-control, .input-group-lg > .form-select, .input-group-lg > .input-group-text {
        padding: 0.5rem 1rem;
        font-size: 1.25rem;
        border-radius: 0.3rem;
    }

    .border-0 {
        border: 0 !important;
    }

    .input-group-text {
        display: flex;
        align-items: center;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #1f2c73;
        text-align: center;
        white-space: nowrap;
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
    }
</style>


<div class="container__film">
    <form class="mt-4" action="/Home/AllFilm" method="get">
        <div class="input-group input-group-lg shadow-sm">
            <span class="input-group-text border-0">
                <i class="fas fa-search fa-xs text-secondary mb-1"></i>
            </span>

            <input type="text" name="namefilm" class="form-control bg-white border-0 px-1" style="outline:none;box-shadow:none " placeholder="Bạn muốn tìm phim gì...">

            <div class="input-group-text border-0 py-1 pe-2">
                <button type="submit" class="btn btn-md btn--warning text-uppercase-bold-sm">
                    Tìm kiếm
                </button>
            </div>
        </div>
    </form>
    <div class="lis-film">

        <h2 class="heading">PHIM</h2>

        <div class="list">

            @foreach( var item in Model.Films)
            {
                <a asp-controller="Home" asp-action="FilmDetailView" asp-route-id="@item.FilmId">
                    <div class="item__film">
                        <img src="@item.PosterUrl" class="item__img" />
                        <span class="item__name">@item.NameFilm</span>
                    </div>
                </a>
            }
           
        </div>
    </div>
    
</div>