@model BookingMovieTickets.VIewModel.FilmVM

@{

    var selectedCategoryName = ViewBag.Categoryid as string; ViewData["Title"] = $"Phim theo thể loại: {selectedCategoryName}";
}


<style>

    .container__film {
        width: 1248px;
        margin: 0 auto;
    }


    .list {
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        margin: 0 auto;
    }

    .item__film {
        width: 285px;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .item__img {
        width: 100%;
        height: 425px;
        object-fit: cover;
        background-position: cover;
        border-radius: 5px;
    }

        .item__img:hover {
            filter: blur(1px) brightness(50%);
        }

    .item__name {
        text-align: center;
        text-transform: capitalize;
        position: relative;
        margin-bottom: 0;
        text-align: left;
        line-height: 160%;
        color: #333;
        font-weight: 700;
        font-size: 16px;
        margin-top: 10px;
        cursor: pointer;
    }

    .heading {
        border-left: 5px solid #ffc936;
        padding: 3px 20px;
        font-size: 30px;
        font-weight: bold;
        margin-top: 120px;
    }

    .categoies__name {
        margin: 30px 0;
        padding: 10px 20px;
        border: 2px solid #ffc936;
        border-radius: 5px;
        display: inline-block;
        font-weight: 600;
    }

    .gradient-text{
        font-size: 24px;
        font-weight: bold;
        background: linear-gradient(90deg, #ff7e5f, #feb47b, #86a8e7, #91eae4);
        background-size: 300% 300%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: gradientAnimation 3s ease infinite;
        display: inline-block;
        margin-left: 53px;
    }

    @@keyframes gradientAnimation {
            0% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
            100% {
                background-position: 0% 50%;
            }
        }
</style>


<div class="container__film">
    <div class="lis-film" style="margin-top: 50px;">

            @if (Model.Films.Count()==0)
            {
                <br class="br" />
                <span class="gradient-text">Không tìm thấy phim thuộc thể loại @selectedCategoryName</span>              
            }
            else
            {


            <h3 class="heading">
                CÁC PHIM THUỘC THỂ LOẠI: &nbsp;&nbsp; @selectedCategoryName
            </h3>

            <br class="br" />
            <div class="list">
                @foreach (var item in Model.Films)
                {
                    <a asp-controller="Home" asp-action="FilmDetailView" asp-route-id="@item.FilmId">
                        <div class="item__film">
                            <img src="@item.PosterUrl" class="item__img" />
                            <span class="item__name">@item.NameFilm</span>
                        </div>
                    </a>
                } </div>
            }

       
    </div>
</div>
